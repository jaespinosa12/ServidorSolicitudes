import java.io.BufferedReader;
import java.io.PrintWriter;
import java.util.concurrent.ArrayBlockingQueue;


public class Buffer 
{
	private ArrayBlockingQueue<Reserva> reservas;
	private int capacidad;

	public Buffer ( int n) 
	{
		capacidad = n;
		reservas = new ArrayBlockingQueue<Reserva>(capacidad);
	}

	public synchronized void retirarSolicitud(BufferedReader pIn, PrintWriter pOut) throws InterruptedException
	{

		while( reservas.size() == 0){
			wait();
		}

		Reserva res = reservas.poll();
		res.reservar();
		synchronized (this) {notifyAll();}
	}
	
	public boolean noHayPeticiones() {
		return reservas.isEmpty();
	}

}
