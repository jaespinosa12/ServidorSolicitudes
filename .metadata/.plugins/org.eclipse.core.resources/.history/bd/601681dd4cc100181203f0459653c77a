import java.util.concurrent.ArrayBlockingQueue;


public class Buffer 
{
	private ArrayBlockingQueue<Reserva> reservas;
	private int capacidad;

	public Buffer ( int n) 
	{
		capacidad = n;
		reservas = new ArrayBlockingQueue<Reserva>(capacidad);
	}

	public synchronized String retirarSolicitud() throws InterruptedException
	{

		while( reservas.size() == 0){
			wait();
		}

		Reserva res = reservas.poll();
		String resp = res.reservar();
		synchronized (this) {notifyAll();}
		return resp;
	}

}
